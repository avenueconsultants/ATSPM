@model SPM.Models.MeasuresDefaultsViewModel

<div id="green-time-utilization-options" role="tablist" aria-multiselectable="true" class="card mr-4 ml-4">
    <div class="card-header" role="tab">
        <a onclick="rotate(this)" data-toggle="collapse" data-parent="#green-time-utilization-options" href="#green-time-utilization-options-collapse" aria-expanded="false" aria-controls="green-time-utilization-options-collapse">
            <i class="fa fa-chevron-right mr-3" aria-hidden="true"></i> Green Time Utilization
        </a>
    </div>
    <div id="green-time-utilization-options-collapse" class="collapse" role="tabpanel">
        <div class="card-body">
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.GreenTimeUtilization.SelectedBinSize, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.GreenTimeUtilization.SelectedBinSize, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GreenTimeUtilization.SelectedBinSize, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.GreenTimeUtilization.SelectedAggSize, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.GreenTimeUtilization.SelectedAggSize, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GreenTimeUtilization.SelectedAggSize, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.GreenTimeUtilization.ShowAverageSplit, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.GreenTimeUtilization.ShowAverageSplit)
                    @Html.ValidationMessageFor(model => model.GreenTimeUtilization.ShowAverageSplit, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
            <div class="row p-1">
                <div class="col-9">
                    @Html.LabelFor(model => model.GreenTimeUtilization.ShowProgrammedSplit, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-3 text-right">
                    @Html.EditorFor(model => model.GreenTimeUtilization.ShowProgrammedSplit)
                    @Html.ValidationMessageFor(model => model.GreenTimeUtilization.ShowProgrammedSplit, "", new { id = "Description-error", @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
